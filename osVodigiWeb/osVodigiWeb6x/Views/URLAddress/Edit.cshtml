@model osVodigiWeb6x.Models.URLAddress

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    });
</script>

<br />
<div class="textblock">
    <table class="instructions">
        <tr>
            <td style="width:100px;"><img src="~/Images/url-icon.png" alt="" style="border-radius:8px 8px;width:70px;height:70px;" /></td>
            <td>
                <span class="paragraphheader">Edit URL Address</span><br />
                <span class="paragraphtext">Please update the appropriate information below.</span>
            </td>
        </tr>
    </table>
</div>
<br />
@using (Html.BeginForm("Edit","URLAddress", FormMethod.Post))
{
<table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
    <tr>
        <td class="formheader" colspan="2">Edit URL Address</td>
    </tr>

    <tr>
        <td class="formprimary"><b>URL Address Source: </b></td>
        <td class="formprimary">
            @Html.TextBoxFor(model => model.URLAddressSource, new { @style = "width:300px;"  })
        </td>
    </tr>

    <tr>
        <td class="formsecondary"><b>URL Address Name: <span class="required">*</span></b></td>
        <td class="formsecondary">
            @Html.TextBoxFor(model => model.URLAddressName, new { @style = "width:300px;", maxlength = 128 })
        </td>
    </tr>

    <tr>
        <td class="formprimary"><b>Tags: </b></td>
        <td class="formprimary">
            @Html.TextBoxFor(model => model.Tags, new { @style = "width:300px;", maxlength = 128 })
        </td>
    </tr>

    <tr>
        <td class="formsecondary"><b>Active: </b></td>
        <td class="formsecondary">
            @Html.EditorFor(model => model.IsActive)
        </td>
    </tr>
    <tr>
        <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Save" style="width:75px;" />@Html.ActionLink("Back to List", "Index")</div></td>
    </tr>
</table>
    <div class="formfootnote"><span class="required">*</span> indicates a required field.</div>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
    @Html.HiddenFor(model => model.URLAddressID)
    @Html.HiddenFor(model => model.AccountID)
    @Html.HiddenFor(model => model.URLAddressSource)
    @Html.HiddenFor(model => model.URLAddressName)
}
